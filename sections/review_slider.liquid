<style>
  .section_4_creative_kids body {
    margin: 0;
    padding: 0;
  }

  .section_4_creative_kids .swiper {
    width: 100%;
    padding-top: 25px;
    padding-bottom: 25px;
  }

  .section_4_creative_kids .swiper-slide {
    background-position: center;
    background-size: cover;
  }

  .section_4_creative_kids .swiper-slide img {
    display: block;
    width: 100%;
  }
  .section_4_creative_kids .swiper-slide.swiper-slide-active {
    transform: scale(1);
    opacity: 1;
  }
  .section_4_creative_kids button {
    background-image: linear-gradient(rgba(255,255,255,0.3) -34%,#58B73E 80%);
    padding: 13px 0;
    box-shadow: 0px 3px 6px rgb(0 0 0);
    font-size: 37px;
    border-radius: 60px;
    border: 0px;
    color: rgb(255,239,63);
    font-weight: 600;
    position: absolute;
    top: 83%;
    width: 75%;
    left: 13%;
    letter-spacing: 2px;
  }
  /*   .section_4_creative_kids .swiper-slide {
  -webkit-transform: scale(0.8);
  -moz-transform: scale(0.8);
  transform: scale(0.8);
  opacity: 0.5;
  } */
  .section_4_creative_kids a {
    text-decoration: none;
    color: rgb(255,239,63);
  }
  .section_4_creative_kids .swiper-button-prev, .section_4_creative_kids .swiper-button-next {
    position: unset;
    display: contents;
    border: 0px;
    margin: 0;
  }
  .section_4_creative_kids .swiper-button-prev i, .section_4_creative_kids .swiper-button-next i {
    font-size: 62px;
    color: black;
    transform: rotate(90deg);
  }
  .swiper-button-next:after, .swiper-button-prev:after {
    display:none;
  }

  @media screen and (max-width:1500px) {
    .section_4_creative_kids button {
      padding: 7px 0;
    }
  }
  @media screen and (max-width:1350px) {
    .section_4_creative_kids button {
      padding: 13px 0px;
      font-size: 32px;
    }
  }
  @media screen and (max-width:1100px) {
    .section_4_creative_kids button {
      padding: 13px 0px;
      font-size: 30px;
    }
  }
  @media screen and (max-width: 970px) {
    .section_4_creative_kids button {
      padding: 8px 0px;
      font-size: 22px;
    }
  }
  @media screen and (max-width: 460px) {
    .section_4_creative_kids button {
      padding: 7px 0px;
    }
  }
  @media screen and (max-width: 350px) {
    .section_4_creative_kids button {
      padding: 4px 0px;
    }
  }
  .section_4_creative_kids .reviews-content {
    background-color: #A01F8C ;
    padding: 0;
    position: relative;
    color: rgb(255,239,63);
    margin-bottom: 0;
    padding-bottom: 0;
    text-align:center;
  }
  .section_4_creative_kids .page-width h2 {
    color:rgb(255,239,63);
    font-size: 52px;
  }
  .img_cn_090 {
    position: relative;
  }
  .section_4_creative_kids .button_data img {
    width: 150px;
    margin: auto;
    margin-bottom: 10px;
  }
  @media screen and (max-width:800px) {
    .section_4_creative_kids .page-width h2 {
      font-size: 26px;
    }
  }
  /*   my-css */
  @media screen and (max-width: 600px) {
    .section_4_creative_kids>.page-width>.swiper.mySwiper.swiper-initialized.swiper-horizontal {
      padding-bottom: 1rem;
      padding-top: 1.5rem;
    }
    .section_4_creative_kids>.page-width {
      width: 100% !important;
    }
    .img_cn_090>h2 {
      font-size: 4rem !important;
    }
    section#shopify-section-template--15213064749208__16349463564ad872b0 {
      margin-top: 2rem;
    }
  }
  .author_review_dates {
    font-size: 2rem;
  }
  .mySwiper {
    -webkit-transition-timing-function:linear!important;
	-o-transition-timing-function:linear!important;
	transition-timing-function:linear!important;
  }
  .review_slider--title h1 {
	padding: 25px;
	background-image:url({{ "Review_Header_Banner_Background.png" | asset_url }});
    background-size: cover;
    height: 100%;
    max-width: 1400px;
    background-repeat: no-repeat;
    color: white; 
    margin: auto;
    text-align: center;    
  }
  .review_slider--title.page-width {
    padding: 0 0 5px 0 !important;
  } 
  .mySwiper>.swiper-wrapper {
    transition-timing-function: linear;
  }
</style>

<div class="section_4_creative_kids">
  <div class="review_slider--title page-width">
    <h1>Our Customers Are Too Kind</h1>
  </div>  
  <div class="reviews-content page-width">
    <div class="swiper mySwiper">
      <div id="swiper_flexy" class="swiper-wrapper">
        {% for block in section.blocks %}
        {% if forloop.length > 2 %}
        <div class="swiper-slide">
          {% endif %}
          <div class="img_cn">
            <div class="img_cn_090">
              <h2>{{ block.settings.title }}</h2>
              <div class="button_data">
                <img src="{{  'author_review.png' | asset_url }}">              
              </div>
              <div class="author_review_dates">
                <p class="author_review_dates_auth"><span>{{ block.settings.author_name }}</span> -<span>{{ block.settings.review_date }}</span></p>
              </div>
            </div>
          </div>
          {% if forloop.length > 2 %}
        </div>
        {% else %}
        {% if forloop.last == true %}
        <style>
          div#swiper_flexy {
            display: flex;
            align-items: center;
            justify-content: space-around;
          }
          @media screen and (max-width:767px) {
            div#swiper_flexy {
              display: block;
            }
            div#swiper_flexy .img_cn:nth-child(1) {
              margin-bottom: 40px;
            }
          }
        </style> 
        {% endif %}        
        {% endif %}
        {% endfor %}
      </div>
    </div>   
  </div>
</div>


