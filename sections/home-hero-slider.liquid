<!-- Swiper -->
<div class="home_hero_slider">
  <div class="page-width">
    <div class="swiper-container"> 
      <div class="swiper-wrapper" id="gallery_wrapper">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'image' -%} 
        <div class="swiper-slide">
          <div class="slide-cont"> 
            <div class="slide-bg slide-bg2">
                <a href="{{ block.settings.slid-img-link }}">
                  {% if block.settings.slid-img %}
                  	<img class="slide-item" src="{{ block.settings.slid-img | img_url : 'master'  }}"             
                      width="{{ block.settings.slid-img.width }}"
                      height="{{ block.settings.slid-img.height }}" />
                  {% endif %}
              </a>
            </div>
          </div>
        </div>
        {%- when 'video' -%} 
        <div class="swiper-slide">
          <div class="slide-cont">
            <div class="video-container">
              <p class="iframe-video"> {{block.settings.slid-vid }} </p>
            </div>
          </div>          
        </div>
        {%- when 'text' -%} 
        <div class="swiper-slide">
          <div class="slide-cont">
            <div class="slide-bg slide-bg2">
              <a href="{{ block.settings.slid-img-html-link }}">              
                <video autoplay loop muted  width="1920" height="1082" {% comment %}poster="//cdn.shopify.com/s/files/1/0201/3347/8500/t/4/assets/ytthumb.jpg"{% endcomment %}>
                  <source src="{{block.settings.slid-vid-html }}" type="video/mp4" />
                  Sorry, your browser doesn't support embedded videos.                                                                         
                </video>
              </a>
            </div>
          </div>          
        </div>
        {%endcase%}
        {% endfor %}
      </div> 
      <div class="nav-buttons-cont">
<!--         <div class="swiper-button-prev my_pre_btn my_nex_bn"><i class="fa fa-chevron-left"></i></div>        -->
        <div class="play-pause">
          <a onclick=mySwiper.autoplay.stop(); class="autoplay stop">||</a>
          <a onclick=mySwiper.autoplay.start(); class="autoplay play">â–·</a>
        </div>
<!--         <div class="swiper-button-next my_next_btn my_nex_bn"><i class="fa fa-chevron-right"></i></div> -->
      </div>	
      <div class="swiper-pagination" style="display:none;"></div>
    </div>
  </div>
</div>

<!-- Swiper JS -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>

  var mySwiper = new Swiper ('.swiper-container', 
                             {
    speed:1000,
    direction: 'horizontal',
    slidesPerView: .9,
    centeredSlides: true,
    spaceBetween: 10,
    navigation: 
    {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    pagination: 
    {
      el: '.swiper-pagination',
      dynamicBullets: true,
    },
    // Disable preloading of all images
    preloadImages: false,  
    zoom: true,
    keyboard: 
    {
      enabled: true,
      onlyInViewport: false,
    },
    // 		mousewheel: 
    // 		{
    // 			invert: true,
    // 		},
    autoplay: 
    {
      delay: 3000,
    },
    loop: true,
  }); 

</script>

<script>
  $(document).ready(function() {

    $('.autoplay.play').hide();

    setInterval (function(){
      var ssheight = $('.slide-item').height();
      $('.slide-cont iframe').css('height', ssheight+'px');
    }, 300);

    $('.autoplay.stop').click (function(){
      $('.autoplay.stop').hide();
      $('.autoplay.play').show();
    });
    $('.autoplay.play').click(function(){
      $('.autoplay.play').hide();
      $('.autoplay.stop').show();
    });
  });
</script>

