<style>
  .section_4_creative_kids {
    padding: 25px 0;
  }
  .review-body {
    margin: auto;
    border: solid #A01F8C 1px;
    position: relative;
  }
  .section_4_creative_kids .swiper {
    width: 100%;
    padding: 25px;
  }
  .section_4_creative_kids .reviews-content {
    text-align:center;
  }
  .review_ctn {
    width: 100%;
  }
  .section_4_creative_kids .button_data img {
    width: 100px;
    padding: 10px !important;
  }

  /*   my-css */

  .review_slider--title h2 {
    color: #A01F8C;   
  } 
  .review_slider--title {
    background-color: #fff;
    text-align: center; 
    position: absolute;
    top: -16px;
    left: 0; 
    right: 0; 
    margin-left: auto; 
    margin-right: auto; 
    width: 150px;
  }
  .review_slider--title h2 {
    font-size: 25px;
  }
  .review_product {
    font-size: 16px;
    color: #A01F8C; 
  }
  .review_product a {
    text-decoration: none;
    color: #A01F8C;
  }
  .review-body_title h2 {
    font-size: 18px;
    color: #A01F8C; 
  }
  .review_body {
    font-size: 12px;
    padding: 0 20px;
    border-right: solid #A01F8C 0.5px;
  }
  .author_review_dates {
    font-size: 10px;
    color: #A01F8C;     
  }
  .mySwiper>.swiper-wrapper {
    transition-timing-function: linear;
  }
  .mySwiper {
    -webkit-transition-timing-function:linear!important;
	-o-transition-timing-function:linear!important;
	transition-timing-function:linear!important;
  }  
</style>

<div class="section_4_creative_kids page-width">
  <div class="review-body">
  <div class="review_slider--title">
    <h2>Reviews</h2>
  </div>  
  <div class="reviews-content">
    <div class="swiper mySwiper">
      <div id="swiper_flexy" class="swiper-wrapper">
        {% for block in section.blocks %}
        {% if forloop.length > 2 %}
        <div class="swiper-slide">
          {% endif %}
          <div class="img_cn">
            <div class="review_ctn">
          <div class="review-body_title">
              <h2>{{ block.settings.title }}</h2>
          </div>
              <div class="button_data">
                <img src="{{  'review-stars.png' | asset_url }}">              
              </div>
              <div class="review_product">
                <p><a href="{{ block.settings.product.url }}">{{ block.settings.product.title | truncate: 25 }}</a></p>
              </div>
              <div class="review_body">
                <div class="review_body-text">{{ block.settings.review_body | truncate: 160 }}</div>             
              </div>
              <div class="author_review_dates">
                <p class="author_review_dates_auth"><span>{{ block.settings.author_name }}</span> -<span>{{ block.settings.review_date }}</span></p>
              </div>
            </div>
          </div>
          {% if forloop.length > 2 %}
        </div>
        {% endif %}
        
        {% endfor %}
      </div>
    </div>   
  </div>
</div>
</div>


<script>
  var swiper = new Swiper(".section_4_creative_kids .mySwiper", {
    grabCursor: true,
    loop: true,
    autoplay: {delay: 0 },
    freeMode: true,
    speed: 8000,
	spaceBetween: 0,
	keyboard: {
      enabled: true,
    },
    breakpoints: {
      200: {
        slidesPerView: 1,
      },  
      480: {
        slidesPerView: 1.5,
      },
      600: {
        slidesPerView: 1.6,
      },
      700: {
        slidesPerView: 2.5,
      },
      1000: {
        slidesPerView: 3.2,
      }          
    }
  });  
</script>

{% schema %}
{
"name": "New Review Slider",
"blocks": [
{
"name": "Slide",
"type": "slide",
"settings": [
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "product",
"id": "product",
"label": "Product"
},
{
"type": "richtext",
"id": "review_body",
"label": "Review Body",
"info": "Truncates after 160 characters"
},
{
"type": "text",
"id": "author_name",
"label": "Author name"
},
{
"type": "text",
"id": "review_date",
"label": "Add Review Date"
}
]
}
],
"presets": [
{
"name": "New Homepage Review Slider"
}
]
}
{% endschema %}

