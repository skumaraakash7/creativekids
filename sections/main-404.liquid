<div class="template-404 page-width center no-banner-top-space page-width">
  <div class="template-404-inner">
  <div class="page-width-hero-page">
  <img src="{{ section.settings.error-img | img_url : 'master' }}" />
  </div>
  <h1 class="title">
    {{ 'templates.404.subtext' | t }}

    {{ 'templates.404.title' | t }}
  </h1>
  <button class="raise"><a href="{{ routes.all_products_collection_url }}" class="link">
    Click here to continue shopping
  </a>
  </button>
  </div>
</div>
<center>
  <div class="bottom-white-space page-width-bottom-white-space">
  <span></span>
  </div>
