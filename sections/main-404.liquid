<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
  @media screen and (min-width: 992px) and (max-width: 1499px) {
  .no-banner-top-space{
    padding-top: 11rem;
    }
  }  
  @media screen and (min-width: 1500px) {
  .no-banner-top-space{
    padding-top: 13rem;
    }
  } 
  .title {
   font-size: 25px; 
  }
  .template-404 button {
    max-width: 450px;
    color: #777154;
    font-size: 15px;
    font-weight: 700;
    padding: 1rem 3rem;
    border-radius: 30px;
    box-shadow: 2px 2px 6px 0px #000;
    border: 0px;
    background-image: linear-gradient(#ecff00, #f5cc00); 
  }
  .template-404 a {
   text-decoration: none; 
  }
  .template-404 {
   background-color: white; 
  }
  .template-404-inner {
    max-width: 750px;
    margin: auto;
  }
    .bottom-white-space {
    background: #fff;
    height: 100px;
    padding: 4rem 0rem 13rem 0rem;
    margin: auto auto -13rem auto;
  }
  .page-width-bottom-white-space {
  max-width: 1400px;
}

@media screen and (min-width: 750px) {
  .page-width-bottom-white-space{
    width: 80%;
  }
}
  
@media screen and (max-width: 1199px) {
.page-width-bottom-white-space {
    width: 90%;
}
}
